@using zic_dotnet
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
	<title>@ViewBag.Title</title>
    @Html.CssDoc("zic-css/mod_resource/jquery-ui-Bootstrap.css")
    @Html.CssDoc("master.css")
    <link rel="shortcut icon" href='@Html.ImgUrl("logo.ico")' type="image/x-icon" />
    <script type="text/javascript">var glo_path = '@Html.ScriptUrl("")'</script>
    <script type="text/javascript" src='@Html.ScriptUrl("zic-js/sea.js")' data-main='@Html.ScriptUrl("init")'></script>
    @RenderSection("head")
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                @*<h1>Byteart Retail</h1>*@
                @*<img src="@Url.Content("~/Content/asserts/images/zkdao.png")" alt="Byteart Retail" />*@
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("My Account", "Index", "Account")</li>
                    <li>@Html.ActionLink("Shopping Cart", "ShoppingCart", "Account")</li>
                    <li>@Html.ActionLink("Order History", "OrderHistory", "Account")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
            <span class="SiteFooter">Copyright &copy; 2009-2012, Apworks Project. All rights reserved.</span>
        </footer>
    </div>
</body>
</html>
