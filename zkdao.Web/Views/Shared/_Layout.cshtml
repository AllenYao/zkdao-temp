@using zic_dotnet
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @Html.CssDoc("master.css")
    <link rel="shortcut icon" href='@Html.ImgUrl("logo.ico")' type="image/x-icon" />
    <script type="text/javascript">        var glo_path = '@Html.ScriptUrl("")'</script>
    <script type="text/javascript" src='@Html.ScriptUrl("zic-js/sea.js")' data-main='@Html.ScriptUrl("init")'></script>
    @RenderSection("head")
</head>
<body>
    <header class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="#">ZKDAO</a>
                <nav>
                    <ul class="nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("My Account", "Index", "Account")</li>
                        <li>@Html.ActionLink("Shopping Cart", "ShoppingCart", "Account")</li>
                        <li>@Html.ActionLink("Order History", "OrderHistory", "Account")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                    </ul>
                </nav>
                <form class="navbar-search pull-left">
                    <input type="text" class="search-query" placeholder="搜索">
                </form>
                <ul class="nav pull-right">
                    @Html.Partial("_LogOnPartial")
                </ul>
            </div>
        </div>
    </header>

    <div id="main" class="row">
        <div class="container">
        <section class="span9">
            @RenderBody()
        </section>
        <section class="span3">
            @RenderSection("sidebar")
        </section>
        </div>
    </div>

    <footer>
        <div class="container">
        <span class="SiteFooter">Copyright &copy; 2009-2012, Apworks Project. All rights reserved.</span>
        </div>
    </footer>
</body>
</html>
