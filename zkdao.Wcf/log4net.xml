<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <log4net>
    <root>
      <level value="ALL" />
    </root>
    <logger name="VerifyLogger">
      <level value="ALL" />
      <appender-ref ref="VerifyLogAppender" />
      <appender-ref ref="VerifyDebugAppender" />
      <appender-ref ref="VerifyErrorAppender" />
    </logger>
    <!--验证码服务信息日志-->
    <appender name="VerifyLogAppender" type="log4net.Appender.RollingFileAppender,log4net" >
      <param name="File" value="Log\VerifyLog\" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Date" />
      <param name="DatePattern" value="yyyy-MM-dd&quot;.txt&quot;" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss}] %m%n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="INFO" />
        <param name="LevelMax" value="INFO" />
      </filter>
    </appender>
    <!--验证码服务调试日志-->
    <appender name="VerifyDebugAppender" type="log4net.Appender.RollingFileAppender,log4net" >
      <param name="File" value="Log\VerifyDebug\" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Date" />
      <param name="DatePattern" value="yyyy-MM-dd&quot;.txt&quot;" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss}] %m%n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="DEBUG" />
        <param name="LevelMax" value="DEBUG" />
      </filter>
    </appender>
    <!--验证码服务错误日志-->
    <appender name="VerifyErrorAppender" type="log4net.Appender.RollingFileAppender,log4net" >
      <param name="File" value="Log\VerifyError\" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Date" />
      <param name="DatePattern" value="yyyy-MM-dd&quot;.txt&quot;" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%m%n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="ERROR" />
        <param name="LevelMax" value="ERROR" />
      </filter>
    </appender>
  </log4net>
</configuration>