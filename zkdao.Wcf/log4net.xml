<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>
  <log4net>
    <root>
      <level value="ALL" />
    </root>
    <logger name="VerifyLogger">
      <level value="ALL" />
      <appender-ref ref="VerifyLogAppender" />
      <appender-ref ref="VerifyDebugAppender" />
      <appender-ref ref="VerifyErrorAppender" />
    </logger>
    <logger name="PageLogger">
      <level value="ALL" />
      <appender-ref ref="PageLog" />
    </logger>
    <logger name="ServiceLogger">
      <level value="ALL" />
      <appender-ref ref="ServiceLog" />
      <appender-ref ref="ServiceError" />
    </logger>
    <logger name="CoreLogger">
      <level value="ALL" />
      <appender-ref ref="CoreLog" />
      <appender-ref ref="CoreError" />
    </logger>
    <logger name="BankLogger">
      <level value="ALL" />
      <appender-ref ref="BankLog" />
      <appender-ref ref="BankError" />
    </logger>
    <logger name="TempLogger">
      <level value="ALL" />
      <appender-ref ref="TempLog" />
    </logger>
    <!--验证码服务信息日志-->
    <appender name="VerifyLogAppender" type="log4net.Appender.RollingFileAppender,log4net" >
      <param name="File" value="Log\VerifyLog\" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Date" />
      <param name="DatePattern" value="yyyy-MM-dd&quot;.txt&quot;" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss}] %m%n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="INFO" />
        <param name="LevelMax" value="INFO" />
      </filter>
    </appender>
    <!--验证码服务调试日志-->
    <appender name="VerifyDebugAppender" type="log4net.Appender.RollingFileAppender,log4net" >
      <param name="File" value="Log\VerifyDebug\" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Date" />
      <param name="DatePattern" value="yyyy-MM-dd&quot;.txt&quot;" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="[%d{yyyy-MM-dd HH:mm:ss}] %m%n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="DEBUG" />
        <param name="LevelMax" value="DEBUG" />
      </filter>
    </appender>
    <!--验证码服务错误日志-->
    <appender name="VerifyErrorAppender" type="log4net.Appender.RollingFileAppender,log4net" >
      <param name="File" value="Log\VerifyError\" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Date" />
      <param name="DatePattern" value="yyyy-MM-dd&quot;.txt&quot;" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%m%n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="ERROR" />
        <param name="LevelMax" value="ERROR" />
      </filter>
    </appender>
    <!--接口服务信息日志-->
    <appender name="CoreLog" type="log4net.Appender.RollingFileAppender,log4net" >
      <param name="File" value="Log\CoreLog\" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Date" />
      <param name="DatePattern" value="&quot;log&quot;_yyyyMMdd&quot;.txt&quot;" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss}%n%m%n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="INFO" />
        <param name="LevelMax" value="INFO" />
      </filter>
    </appender>
    <!--接口服务错误日志-->
    <appender name="CoreError" type="log4net.Appender.RollingFileAppender,log4net" >
      <param name="File" value="Log\CoreError\" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Date" />
      <param name="DatePattern" value="&quot;log&quot;_yyyyMMdd&quot;.txt&quot;" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss}%n%m%n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="ERROR" />
        <param name="LevelMax" value="ERROR" />
      </filter>
    </appender>
    <!--服务错误日志-->
    <appender name="ServiceError" type="log4net.Appender.RollingFileAppender,log4net" >
      <param name="File" value="Log\ServiceError\" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Date" />
      <param name="DatePattern" value="&quot;log&quot;_yyyyMMdd&quot;.txt&quot;" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss}%n%m%n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="ERROR" />
        <param name="LevelMax" value="ERROR" />
      </filter>
    </appender>
    <!--服务错误日志-->
    <appender name="ServiceLog" type="log4net.Appender.RollingFileAppender,log4net" >
      <param name="File" value="Log\ServiceLog\" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Date" />
      <param name="DatePattern" value="&quot;log&quot;_yyyyMMdd&quot;.txt&quot;" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss}%n%m%n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="INFO" />
        <param name="LevelMax" value="INFO" />
      </filter>
    </appender>
    <!--第三方支付信息日志-->
    <appender name="BankLog" type="log4net.Appender.RollingFileAppender,log4net" >
      <param name="File" value="Log\BankLog\" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Date" />
      <param name="DatePattern" value="&quot;log&quot;_yyyyMMdd&quot;.txt&quot;" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss}%n%m%n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="INFO" />
        <param name="LevelMax" value="INFO" />
      </filter>
    </appender>
    <!--第三方支付错误日志-->
    <appender name="BankError" type="log4net.Appender.RollingFileAppender,log4net" >
      <param name="File" value="Log\BankError\" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Date" />
      <param name="DatePattern" value="&quot;error&quot;_yyyyMMdd&quot;.txt&quot;" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss}%n%m%n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="ERROR" />
        <param name="LevelMax" value="ERROR" />
      </filter>
    </appender>
    <!--页面访问信息日志-->
    <appender name="PageLog" type="log4net.Appender.RollingFileAppender,log4net" >
      <param name="File" value="Log\ServerLogPub\" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Date" />
      <param name="DatePattern" value="&quot;log&quot;_yyyyMMdd&quot;.txt&quot;" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%m%n" />
      </layout>
    </appender>
    <appender name="TempLog" type="log4net.Appender.RollingFileAppender,log4net" >
      <param name="File" value="Log\TempLog\" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Date" />
      <param name="DatePattern" value="&quot;log&quot;_yyyyMMdd&quot;.txt&quot;" />
      <param name="StaticLogFileName" value="false" />
      <layout type="log4net.Layout.PatternLayout,log4net">
        <param name="ConversionPattern" value="%m%n" />
      </layout>
    </appender>
  </log4net>
</configuration>